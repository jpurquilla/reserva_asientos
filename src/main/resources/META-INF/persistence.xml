<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PUreservas" transaction-type="JTA">
        <jta-data-source>java:global/reservasDataSource</jta-data-source>

        <class>sv.edu.ues.igf.reserva_asientos.entidades.Menu</class>
        <class>sv.edu.ues.igf.reserva_asientos.entidades.Menuxperfil</class>
        <class>sv.edu.ues.igf.reserva_asientos.entidades.Perfil</class>
        <class>sv.edu.ues.igf.reserva_asientos.entidades.Persona</class>
        <class>sv.edu.ues.igf.reserva_asientos.entidades.Usuario</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
<!--            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/script/reserva.sql"/>-->
            <property name="jakarta.persistence.schema-generation.create-script-source" value="META-INF/script/reserva.sql"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.id.new_generator_mappings" value="false"/>
            <property name="toplink.jdbc.url" value="jdbc:postgresql://localhost:5432/reserva_asientos"/>
            <property name="toplink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="toplink.jdbc.user" value="postgres"/>
            <property name="toplink.jdbc.password" value="admin"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/reserva_asientos"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="admin"/>
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/reserva_asientos"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionUserName" value="postgres"/>
            <property name="openjpa.ConnectionPassword" value="admin"/>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/reserva_asientos"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="postgres"/>
            <property name="eclipselink.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>
